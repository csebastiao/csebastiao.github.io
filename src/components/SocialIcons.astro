---
import SocialIcon from "@components/SocialIcon.astro";
import { SITE } from "@consts";

export interface Props {
    icon_size: string
}
  
const { icon_size } = Astro.props;
---
<ul class="not-prose flex flex-wrap gap-2">
    <SocialIcon icon_size={icon_size} URL="https://github.com/csebastiao" icon="github"/>
    <SocialIcon icon_size={icon_size} URL="https://www.linkedin.com/in/cl%C3%A9ment-sebastiao-530455315/" icon="linkedin"/>
    <SocialIcon icon_size={icon_size} URL="mailto:clse@itu.dk" icon="envelope-fill"/>
    <SocialIcon icon_size={icon_size} URL="https://scholar.google.com/citations?user=9DteMXgAAAAJ" icon="mortarboard-fill"/>
    <SocialIcon icon_size={icon_size} URL={`${SITE.SITEURL}/rss.xml`} icon="rss-fill"/>
</ul>